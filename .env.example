# DataSci Homelab Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# RStudio Server Configuration
RSTUDIO_PORT=8787
RSTUDIO_USER=rstudio
RSTUDIO_PASSWORD=changeme_secure_password_here

# Jupyter Notebook Configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=changeme_secure_token_here

# Docker Registry Configuration
# Choose between 'ghcr' (GitHub Container Registry) or 'dockerhub' (Docker Hub)
# Images are mirrored to both registries
REGISTRY=ghcr
IMAGE_TAG=latest

# Optional: Set specific versions if needed
# RSTUDIO_VERSION=latest
# JUPYTER_VERSION=latest

# Optional: Resource limits (uncomment to enable)
# RSTUDIO_MEM_LIMIT=4g
# RSTUDIO_CPU_LIMIT=2
# JUPYTER_MEM_LIMIT=4g
# JUPYTER_CPU_LIMIT=2
